# Configuration Environnement - Copier vers .env et modifier les valeurs

# Base de données PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=registre_foncier
DB_USER=rfd_user
DB_PASSWORD=rfd_password
DATABASE_URL=postgresql://rfd_user:rfd_password@localhost:5432/registre_foncier

# Redis Cache
REDIS_URL=redis://localhost:6379
REDIS_PORT=6379

# API Configuration
BACKEND_PORT=8000
FRONTEND_PORT=3000
API_SECRET_KEY=your-secret-key-here
JWT_SECRET=your-jwt-secret-here
JWT_ALGORITHM=HS256
JWT_EXPIRE_HOURS=24

# CELO Blockchain
CELO_NETWORK=alfajores
CELO_RPC_URL=https://alfajores-forno.celo-testnet.org
CELO_MAINNET_RPC_URL=https://forno.celo.org
PRIVATE_KEY=your-private-key-here
CONTRACT_ADDRESS=

# IPFS Configuration
IPFS_GATEWAY=https://gateway.pinata.cloud
PINATA_API_KEY=your-pinata-api-key
PINATA_SECRET_KEY=your-pinata-secret-key
IPFS_PROJECT_ID=your-infura-ipfs-project-id
IPFS_PROJECT_SECRET=your-infura-ipfs-secret

# Application Configuration
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=http://localhost:3000

# Sécurité
ENCRYPTION_KEY=your-encryption-key-here
SALT_ROUNDS=12

# Email Configuration (optionnel)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Monitoring (optionnel)
SENTRY_DSN=your-sentry-dsn
TENDERLY_ACCESS_KEY=your-tenderly-access-key
